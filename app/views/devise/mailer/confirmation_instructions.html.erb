<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-5">
        <div class="card-body">
          <h2 class="text-center">Welcome, <%= @email %>!</h2>

          <p class="text-center">You can confirm your account email through the link below:</p>

          <div class="text-center">
            <%= link_to 'Confirm My Account', confirmation_url(@resource, confirmation_token: @token), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
