<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-5">
        <div class="card-body">
          <h2 class="text-center">Hello, <%= @resource.email %>!</h2>

          <p class="text-center">Your account has been locked due to an excessive number of unsuccessful sign-in attempts.</p>

          <p class="text-center">Click the link below to unlock your account:</p>

          <p class="text-center"><%= link_to 'Unlock my account', unlock_url(@resource, unlock_token: @token) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
