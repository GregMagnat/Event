<div class="event-card" id="<%= dom_id event %>">
  <div class="event-details">
    <h3><%= event.title %></h3>
    <p class="event-info"><strong>Start date:</strong> <%= event.start_date %></p>
    <p class="event-info"><strong>Duration:</strong> <%= event.duration %></p>
    <p class="event-info"><strong>Description:</strong> <%= event.description %></p>
    <p class="event-info"><strong>Price:</strong> <%= event.price %></p>
    <p class="event-info"><strong>Location:</strong> <%= event.location %></p>
  </div>
</div>